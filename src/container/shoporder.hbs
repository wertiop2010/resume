<div class="row">
    
        {{> linkNew}}

    <div class="col-8">
        <section> 
            <h1 class="mb-4">{{header}}</h1>
            {{#with contacts_data}}
            <h5 class="card-title mb-3">{{title}}</h5> 
            {{#each buttons}}
            <button class="btn me-3 {{#if isPrimary}} btn-warning text-light{{/if}} 
            {{#if isOutline}} btn-outline-warning {{/if}} text-center mb-3"><b>{{text}}</b>
            </button>
            {{/each}}
        </section>

        <section>
            <div class="row">
                <div class="col-6 mb-3"> 
                {{#with form}}
                    {{#with input}}              
                        {{#with surname}}
                        <label class="form-label"><b>{{label}}</b></label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text"><small>{{caption}}</small></div>
                        {{/with}}
                </div>

               
                <div class="col-6 mb-3">
                    {{#with name}}
                    <label class="form-label"><b>{{label}}</b></label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"><small>{{caption}}</small></div>
                    {{/with}}
                </div>
          
                 <div class="col-6">
                    {{#with phone}}
                    <label class="form-label"><b>{{label}}</b></label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"><small>{{caption}}</small></div>
                    {{/with}}
                </div>

                 <div class="col-6">
                    {{#with email}}
                    <label class="form-label"><b>{{label}}</b></label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"><small>{{caption}}</small></div>
                    {{/with}}
                </div>
                  {{/with}}
                 
            </div>
        </section>
   
        <hr class="my-2">

        <section>
            <div class="row">
                <div class="col-6 mb-3"> 
                {{#each switch}}
                    <div class="form-check form-switch btn-lg">
                        <label class="form-check-label">{{text}}</label>
                        <input {{#if isActive}}active
                        {{else}}disabled{{/if}} name="food" type="checkbox" class="form-check-input">
                    </div>
                {{/each}}
                </div>
            </div>
            {{/with}}
            {{/with}}
        </section>

        <hr class="my-2">

        <section>
            {{#with delivery}}
            <div class="row">    
                <div class="col-12 mb-3">
                    <h2 class="mb-4"><b>{{title}}</b></h2>
                    <div class="card  p-3">    
                        {{#each select}}
                        <div class="col-5">
                            <label class="form-label"><b>{{label}}</b></label>
                            <select class="form-select">
                                <option selected>{{placeholder}}</option>
                                {{#each options}} <option value="{{value}}">{{text}}</option>{{/each}}
                            </select>
                        </div>
                        {{/each}}
                    </div>
                </div> 
            </div>
           
        </section>

        <section>
            <div class="col-12">{{#each delivery_type}}
                    <div class="form-check">
                        <label class="form-check-label">{{type}}</label>
                        <input name="delivery_type" type="radio" class="form-check-input">
                    </div>
            {{/each}}
            </div>
            
        </section>  

         <hr class="my-2">

        <section>
            {{#with payment}}
            <div class="col-12">{{#each list}}
                <div class="form-label">{{title}}</div>
                <div class="form-check">
                    <label class="form-check-label">{{type}}</label>
                    <input name="payment" type="radio" class="form-check-input">
                     <div class="form-text"><small>{{description}}</small></div>
                </div>{{/each}}
                 {{/with}}
            </div>
            
        </section>

        <hr class="my-2">

         <section>
            {{#with contact}}
            <div class="row">
                 <h1 class="mb-4">{{title}}</h1>
                <div class="col-6 mb-3">              
                        {{#with surname}}
                        <label class="form-label"><b>{{label}}</b></label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text"><small>{{caption}}</small></div>
                        {{/with}}
                </div>

               
                <div class="col-6 mb-3">
                    {{#with name}}
                    <label class="form-label"><b>{{label}}</b></label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"><small>{{caption}}</small></div>
                    {{/with}}
                </div>
          
                 <div class="col-6">
                    {{#with phone}}
                    <label class="form-label"><b>{{label}}</b></label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"><small>{{caption}}</small></div>
                    {{/with}}
                </div>

                 <div class="col-6">
                    {{#with email}}
                    <label class="form-label"><b>{{label}}</b></label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"><small>{{caption}}</small></div>
                    {{/with}}
                </div>
            </div>
            {{/with}} 
            {{/with}}
        </section>
    </div>

   
    <div class="col-4">
       
        <div class="card mt-5">
            <div class="card-body"> 
                {{#each action_block}}
                <button class="btn 
                {{#if isSuccess}}btn-success{{/if}}  
                {{#if isDanger}}btn-danger{{/if}} 
                {{#if isInfo}}btn-info{{/if}} my-1">
                {{text}}</button><br>
                {{/each}}
            </div>
        </div>

        <div class="card mt-5">
            <div class="card-body">
                {{#with total}} 
                    <h3 class="card-title">{{title}}</h3>
                    {{#each item_list}}
                    <p><div class="">{{name}}: {{price}}</div></p>
                    {{/each}}
                    <hr class="my-1">
                    {{#each additional_info}}
                    <p><div class="">{{text}}: {{value}}</div></p>
                    {{/each}}
                    <hr class="my-1">
                    {{#with total_price}}
                    <p><div class="">{{text}}: {{value}}</div></p>
                    {{/with}}
                    <hr class="my-1">
                    {{#each button}}
                    <button class="btn 
                    {{#if isPrimary}}btn-primary{{/if}}  
                    {{#if isOutline}}btn-outline-primary{{/if}} my-1">
                    {{text}}</button><br>
                    {{/each}}
                {{/with}}
            </div>
        </div>
    </div>
     <hr class="my-5"> 

    <div>  
        <div class="nav">  
        {{#each footer.[0]}}  
            <div class="nav-item col-2"> 
                <a href="{{link}}" class="nav-link">{{text}}</a>
            </div> 
        {{/each}}
        </div>
        <div class="nav">  
        {{#each footer.[1]}}  
            <div class="nav-item col-2"> 
                <a href="{{link}}" class="nav-link">{{text}}</a>
            </div> 
        {{/each}}
        </div>
        <div class="nav">  
        {{#each footer.[2]}}  
            <div class="nav-item col-2"> 
                <a href="{{link}}" class="nav-link">{{text}}</a>
            </div> 
        {{/each}}
        </div>
        <div class="nav">  
        {{#each footer.[3]}}  
            <div class="nav-item col-2"> 
                <a href="{{link}}" class="nav-link disabled" >{{text}}</a>
            </div> 
        {{/each}}
        </div>
    </div>
</div>   
