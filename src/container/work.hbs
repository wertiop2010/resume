{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                <div class="card text-bg-secondary col-3 m-2 p-3 my-5">
                {{> title big=true data="Work history"}}
                <div>
                    <ul>
                        {{#each works}}
                            <li>
                                <div>{{position}}</div>
                                <br>
                                    <div>{{duration.from}} - 
                                        {{#if duration.to}} 
                                            {{duration.to}} 
                                        {{else}} 
                                            (ще працює) 
                                        {{/if}}
                                    </div>
                                <br>
                                <div>{{#if company.url}}
                                    {{> link text=company.name href=company.url blank=true noLine=true}}
                                    {{else}} 
                                           <b>{{company.name}}</b>
                                    {{/if}}
                                    </div>
                                <br>
                                <br>
                                <div>
                                    <strong>Projects ({{projectAmount}})</strong>
                                </div>
                                <br>


                                <ul>
                                    {{#each projects}}
                                        <li>
                                            <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                            <br>
                                            <div><p>{{about}}</p></div>
                                       
                                                <em>Project stacks ({{stackAmount}})</em>
                                            <br>
                                            <ul>
                                                {{#each stack}}
                                                <li>
                                                    <div>{{name}}</div>
                                                </li>
                                                {{/each}}
                                            </ul>
                                            <br>
                                                <em>Project avards ({{awardAmount}})</em>
                                            <br>
                                            <ul>
                                                {{#each awards}}
                                                <li>
                                                    <div>{{name}}</div>
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </li>
                                    {{/each}}
                                </ul>
                            </li>
                            <br>
                        {{/each}}
                    </ul>
                </div>
                </div>
            </section>
        </main>
    {{/with}}
</div>

