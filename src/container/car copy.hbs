<div>
    <main>
        <section>
            <div>
        <h1>{{make}} {{model}} {{year}}</h1>
    <h2>Features</h2>
    <ul>
      <li>Make: {{make}}</li>
      <li>Model: {{model}}</li>
      <li>Year: {{year}}</li>
      <li>Color: {{color}}</li>
      </ul>
        {{#with features}}
            {{#with interior}}
                {{#with seats}}
                <li>
                    
                        Interior Features:
                        Seats:
                            <ul>
                                <li>Material: {{material}}</li>
                                <li>Color: {{color}}</li>
                                <li>{{#if heated}}Heated{{if}}</li>
                                <li>{{#if ventilated}}Ventilated{{if}}</li>
                            </ul>
               
                </li>
                 {{/with}}
                <li>Dashboard:
                    <ul>
                    <li>Material: plastic</li>
                    <li>Color: black</li>
                    <li>Display:
                        <ul>
                        <li>Type: LCD</li>
                        <li>Size: 10.1</li>
                        <li>Resolution: 1280x720</li>
                        <li>Touchscreen: true</li>
                        </ul>
                    </li>
                    </ul>
                </li>
                <li>Audio:
                    <ul>
                    <li>System: JBL</li>
                    <li>Speakers: 8</li>
                    <li>Subwoofer: true</li>
                    <li>Bluetooth: true</li>
                    <li>USB: true</li>
                    </ul>
                </li>
                </ul>
            </li>
            {{/with}}
        <li>Exterior Features:
            <ul>
            <li>Wheels:
                <ul>
                <li>Size: 18</li>
                <li>Type: alloy</li>
                <li>Color: silver</li>
                </ul>
            </li>
            <li>Headlights:
                <ul>
                <li>Type: LED</li>
                <li>Brightness: high</li>
                <li>Automatic: true</li>
                </ul>
            </li>
            <li>Sunroof:
                <ul>
                <li>Type: panoramic</li>
                <li>Size: large</li>
                <li>Automatic: true</li>
                </ul>
            </li>
            </ul>
        </li>
        <li>Safety Features:
            <ul>
            <li>Airbags:
                <ul>
                <li>Front: 2</li>
                <li>Side: 2</li>
                <li>Knee: 2</li>
                <li>Rear: 2</li>
                </ul>
            </li>
            <li>Assistance:
                <ul>
                <li>Blind Spot Monitoring: true</li>
                <li>Rear Cross Traffic Alert: true</li>
                <li>Lane Departure Warning: true</li>
                <li>Adaptive Cruise Control: true</li>
            </div>
        {{/with}}
        </section>
    </main>
</div>

