{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#each images}}
    <img  alt="image" src="{{this}}">
    {{/each}}
    {{#with main}}
        <main>
            <section class="mb-5">
                {{> title big=true data=summary.title}}
                <div>
                    <p>
                        {{summary.text}}
                    </p>
                </div>
            </section>

        {{#with experience}}
                <section>
                    <div>
                        {{> title big=false data=title}}
                    </div>
                    <div>
                        <p>
                        {{text}}
                        </p>
                    </div>
                </section>
            {{/with}}
        </main>
    {{/with}}

</div>

