{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


  
    {{#with main}}
        <main><div class="row">
            <div class="card text-bg-secondary col-5 m-2 p-3 my-5">
                {{> title big=true data=summary.title}}
                <div>
                    <p>
                        {{summary.text}}
                    </p>
                </div>
            </div>

        {{#with experience}}
                <div class="card text-bg-secondary col-5 m-2 p-3 my-5">
                    <div>
                        {{> title big=false data=title}}
                    </div>
                    <div>
                        <p>
                        {{text}}
                        </p>
                    </div>
                </div></div>
            {{/with}}
        </main>
    {{/with}}



