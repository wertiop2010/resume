<div class="row">
        <section> 
            {{#with navigation}}
                <div class="card  p-3">
                    <div class="nav">
                    {{#each links}} 
                        <div class="nav-item ">   
                            <a href="{{href}}" class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
                        </div>
                    {{/each}}
                </div>
            {{/with}}
        </section>

    <div class="col-12">
        <section> 
            {{#with header}}
                <h1 class="mb-4">{{title}}</h1> 
            {{#with button}}
                <button href="{{link}}" class="btn btn-outline-secondary me-3"><b>{{text}}</b>
                </button>
            {{/with}}
            {{/with}}
        </section>
    </div> 

    <hr class="my-5">
      
    {{> cartGoodsItem}}
   
    <hr class="my-5"> 


    <section>{{#with total}}<div class="ms-3">
        <h5>{{title}}</h5>
        <p class="display-6"><b>{{amount}}</b></p>
        <p>{{delivery}}</p>
        {{#each buttons}}
            <button href="{{link}}" class="btn m-2 {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}}">{{text}}</button><br>
        {{/each}}
    {{/with}}
    </div>
    </section>

    <hr class="my-5"> 

     <section>{{#with goodsOtherBlock}}
       <div class="text-center my-3"><h2>{{title}}</h2></div>
        <div class="row g-2">
            {{#each cards}}
           <div class="col-4">
                <div class="card">
                    <img class="card-img-top" alt="image" src="{{image}}">
                    <div class="card-body">
                        <h6 class="card-title">{{title}}
                            {{#if isHot}}
                                    <span class="badge text-bg-warning text-center rounded-pill mb-3 btn-sm"><b>Hot!</b></span>
                            {{/if}}
                            {{#if isNew}}
                                <span class="badge text-bg-primary rounded-pill mb-3 btn-sm"><b>Нова</b></span>
                            {{/if}}
                        </h6>
                        <p><div class="">{{description}}</div></p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
      {{/with}}
    </section>

    <hr class="my-5"> 

    <section>
        {{#with subscribe}}
        <div class="row g-2">
           <div class="col-12"> 
                <div class="card text-bg-dark">
                    <div class="card-body">
                        <h6 class="card-title">{{header}}</h6>
                        <p><div class="">{{description}}</div></p>
                        {{#each buttons}}
                        <button class="btn btn-primary text-center mb-3" href="{{link}}">{{text}}</button><br>
                        {{/each}}
                    </div>
               </div>
            </div>
        </div>
        {{/with}}
    </section>

    <hr class="my-5"> 

    <section>  
        <div class="nav">  
        {{#each footer.[0]}}  
            <div class="nav-item col-2"> 
                <a href="{{link}}" class="nav-link">{{text}}</a>
            </div> 
        {{/each}}
        </div>
        <div class="nav">  
        {{#each footer.[1]}}  
            <div class="nav-item col-2"> 
                <a href="{{link}}" class="nav-link">{{text}}</a>
            </div> 
        {{/each}}
        </div>
        <div class="nav">  
        {{#each footer.[2]}}  
            <div class="nav-item col-2"> 
                <a href="{{link}}" class="nav-link">{{text}}</a>
            </div> 
        {{/each}}
        </div>
        <div class="nav">  
        {{#each footer.[3]}}  
            <div class="nav-item col-2"> 
                <a href="{{link}}" class="nav-link disabled" >{{text}}</a>
            </div> 
        {{/each}}
        </div>
    </section>
</div>   
